{% extends "layouts/main.njk" %}
{% from "../mocks/map-offices.js" import offices %}

{% block content %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <span class="govuk-caption-l">Before you start</span>
    <form action="">
      {% from "govuk/components/input/macro.njk" import govukSelect %}
        {{ govukSelect({
          id: "planning-department",
          name: "planning-department",
          label: {
            text: "What is the name of the local planning department?",
            classes: "govuk-label--l",
            isPageHeading: true
          },
          items:offices
        }) }}

        {% from "govuk/components/button/macro.njk" import govukButton %}
 
        {{ govukButton({
          text: "Continue",
          type: "Submit"
        }) }}
      </form>
  </div>
</div>

{% endblock %}
